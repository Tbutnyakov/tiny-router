{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./",
    "strict": true,
    "jsx": "react",
    "target": "es5",
    "allowJs": true,
    "lib": ["dom", "es2019"],
    "esModuleInterop": true,
    "downlevelIteration": true,
    "declaration": false,
    "keyofStringsOnly": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "paths": {
      "~/*": ["./src/*"],
      "tiny-router": ["../../dist/*"]
    }
  },
  "include": ["src/**/*"]
}
